			flag5=true;
		}else{
			flag5=false;
		}
		if(flag1 && flag2 && flag3 && flag4 && flag5){
			executor.assertTrue(true,"Error messages displayed successfully");
		}else{
			executor.assertTrue(false,"Error messages are not displayed");
		}
	}
	
	
